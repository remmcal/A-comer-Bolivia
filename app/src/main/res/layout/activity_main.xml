<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bandera"
    tools:context="org.remmcal.acomerbolivia.MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   entradas                          "
                android:layout_gravity="left"
                android:textStyle="bold|italic"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textAllCaps="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sopas"
                android:layout_gravity="right"
                android:textStyle="bold|italic"
                android:textColor="#f7f7f6"
                android:textSize="15dp"
                android:textAllCaps="true" />
        </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">
             <ImageButton
                 android:layout_width="150dp"
                 android:layout_height="150dp"
                 android:src="@drawable/entradas"
                 android:onClick="entradas"
                 android:scaleType="centerCrop"
                 android:layout_marginLeft="8dp"
                 android:layout_marginRight="8dp" />
             <ImageButton
                 android:layout_width="150dp"
                 android:layout_height="150dp"
                 android:src="@drawable/sopas"
                 android:layout_gravity="center"
                 android:onClick="sopas"
                 android:scaleType="centerCrop"
                 android:layout_marginLeft="8dp"
                 android:layout_marginRight="8dp" />
         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:paddingTop="16dp">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="   segundos                          "
                 android:textStyle="bold|italic"
                 android:textColor="#ffffff"
                 android:textSize="15dp"
                 android:textAllCaps="true" />
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="postres"
                 android:paddingTop="8dp"
                 android:textStyle="bold|italic"
                 android:textColor="#f7f7f6"
                 android:textSize="15dp"
                 android:textAllCaps="true" />
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">
             <ImageButton
                 android:layout_width="150dp"
                 android:layout_height="150dp"
                 android:src="@drawable/segundos"
                 android:onClick="segundos"
                 android:scaleType="centerCrop"
                 android:layout_marginLeft="8dp"
                 android:layout_marginRight="8dp" />
             <ImageButton
                 android:layout_width="150dp"
                 android:layout_height="150dp"
                 android:src="@drawable/postres"
                 android:layout_gravity="center"
                 android:onClick="postres"
                 android:scaleType="centerCrop"
                 android:layout_marginLeft="8dp"
                 android:layout_marginRight="8dp" />
         </LinearLayout>




         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:paddingTop="16dp">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="   bebidas                            "
                 android:textStyle="bold|italic"
                 android:textColor="#ffffff"
                 android:textSize="15dp"
                 android:textAllCaps="true" />
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="tips de cocina"
                 android:paddingTop="8dp"
                 android:textStyle="bold|italic"
                 android:textColor="#f7f7f6"
                 android:textSize="15dp"
                 android:textAllCaps="true" />
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">
             <ImageButton
                 android:layout_width="150dp"
                 android:layout_height="150dp"
                 android:src="@drawable/bebidas"
                 android:onClick="bebidas"
                 android:scaleType="centerCrop"
                 android:layout_marginLeft="8dp"
                 android:layout_marginRight="8dp" />
             <ImageButton
                 android:layout_width="150dp"
                 android:layout_height="150dp"
                 android:src="@drawable/tips"
                 android:layout_gravity="center"
                 android:onClick="tips"
                 android:scaleType="centerCrop"
                 android:layout_marginLeft="8dp"
                 android:layout_marginRight="8dp" />
         </LinearLayout>





         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:paddingTop="16dp">
             <Button
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Descripcion"
                 android:textStyle="bold|italic"
                 android:textColor="#ffffff"
                 android:textSize="12dp"
                 android:onClick="descripcion"
                 android:textAllCaps="true" />


         </LinearLayout>


     </LinearLayout>

    </ScrollView>



</LinearLayout>

